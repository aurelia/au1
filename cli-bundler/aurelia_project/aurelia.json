{
  "transpiler": {
    // @if babel
    "options": {
      "plugins": [
        ["@babel/plugin-transform-modules-amd", {"loose": true}]
      ]
    },

    "source": [
      // @if plugin
      "dev-app/**/*.js",
      // @endif
      "src/**/*.js"
    ],
    // @endif

    // @if typescript
    "dtsSource": ["./types/**/*.d.ts"],
    "source": [
      // @if plugin
      "dev-app/**/*.ts",
      // @endif
      "src/**/*.ts"
    ],
    // @endif
  },
  "markupProcessor": {
    "source": [
      // @if plugin
      "dev-app/**/*.html",
      // @endif
      "src/**/*.html"
    ],
  },
  "cssProcessor": {
    // @if ! (less || sass || stylus)
    "source": [
      // @if plugin
      "dev-app/**/*.css",
      // @endif
      "src/**/*.css"
    ],
    // @endif

    // @if less
    "source": [
      // @if plugin
      "dev-app/**/*.less",
      // @endif
      "src/**/*.less"
    ],
    // @endif

    // @if sass
    "source": [
      // @if plugin
      "dev-app/**/*.scss",
      // @endif
      "src/**/*.scss"
    ],
    // @endif

    // @if stylus
    "source": [
      // @if plugin
      "dev-app/**/*.styl",
      // @endif
      "src/**/*.styl"
    ],
    // @endif
  },
  "jsonProcessor": {
    "source": [
      // @if plugin
      "dev-app/**/*.json",
      // @endif
      "src/**/*.json"
    ],
  },
  // @if karma
  "unitTestRunner": {
    // @if babel
    "source": "test/unit/**/*.js",
    // @endif
    // @if typescript
    "source": "test/unit/**/*.ts",
    // @endif
  },
  "testFramework": {
    "id": "jasmine"
  },
  // @endif
  "platform": {
    // @if web
    "port": 9000,
    "host": "localhost",
    "open": false,
    "index": "index.html",
    "baseDir": ".",
    "output": "scripts",
    // @endif

    // @if dotnet-core
    "port": 5000,
    "host": "localhost",
    "index": "wwwroot/index.html",
    "baseDir": "./wwwroot",
    "baseUrl": "scripts",
    "output": "wwwroot/scripts",
    // @endif
  },
  "build": {
    "targets": [
      // @if web
      {
        "port": 9000,
        "index": "index.html",
        "baseDir": ".",
        "output": "scripts"
      },
      // @endif

      // @if dotnet-core
      {
        "port": 5000,
        "index": "wwwroot/index.html",
        "baseDir": "./wwwroot",
        "baseUrl": "scripts",
        "output": "wwwroot/scripts"
      }
      // @endif
    ],
    "options": {
      "minify": "stage & prod",
      "sourcemaps": "dev & stage",
      "rev": "prod",
      "cache": "dev & stage"
    },
    "bundles": [
      {
        "name": "app-bundle.js",
        "source": [
          "**/*.{js,json,css,html}"
        ]
      },
      {
        "name": "vendor-bundle.js",
        "prepend": [
          // @if babel
          "node_modules/regenerator-runtime/runtime.js",
          // @endif
          // @if scaffold-navigation
          "node_modules/whatwg-fetch/dist/fetch.umd.js",
          // @endif
          "node_modules/promise-polyfill/dist/polyfill.min.js",
          // @if requirejs
          "node_modules/requirejs/require.js",
          // @endif
          // @if alameda
          "node_modules/alameda/alameda.js",
          // @endif
        ],
        "dependencies": [
          "aurelia-bootstrapper",
          "aurelia-loader-default",
          "aurelia-pal-browser",
          {
            "name": "aurelia-testing",
            "env": "dev"
          },
          "text"
        ]
      }
    ],
    // @if scaffold-navigation
    "copyFiles": {
      // @if web
      "node_modules/@fortawesome/fontawesome-free/webfonts/*": "@fortawesome/fontawesome-free/webfonts",
      // @endif
      // @if dotnet-core
      "node_modules/@fortawesome/fontawesome-free/webfonts/*": "wwwroot/@fortawesome/fontawesome-free/webfonts",
      // @endif
    },
    // @endif
    "loader": {
      "type": "require",
      "configTarget": "vendor-bundle.js",
      "includeBundleMetadataInConfig": "auto",
      "plugins": [
        {
          "name": "text",
          "extensions": [
            ".html",
            ".css"
          ],
          "stub": false
        }
      ]
    }
  }
}
