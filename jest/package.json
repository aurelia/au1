{
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",

    // @if babel
    "babel-jest": "^29.7.0",
    // @endif

    // @if typescript
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.14",
    // @endif
  },
  "scripts": {
    "test": "au test"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.spec./* @if babel */js/* @endif *//* @if typescript */ts/* @endif */"
    ],
    "moduleNameMapper": {
      // avoid aurelia-bindings v1+v2 conflict
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding",
      // @if cli-bundler && (less || sass || stylus)
      // Because with cli-bundler, <require from="./file.css"></require> requests file.css,
      // But jest cannot find the css file (generated by gulp when running real app mode).
      "^.+\\.css$": "<rootDir>/test/mock-css"
      // @endif
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      // @if typescript
      "ts",
      // @endif
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      // @if babel
      "^.+\\.js$": "babel-jest",
      // @endif

      // @if typescript
      "^.+\\.ts$": "ts-jest",
      // @endif
    },

    "setupFiles": [
      // @if babel
      "<rootDir>/test/jest-pretest.js",
      // @endif

      // @if typescript
      "<rootDir>/test/jest-pretest.ts",
      // @endif
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      // @if babel
      "src/**/*.js",
      "!**/*.spec.js",
      // @endif

      // @if typescript
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      // @endif
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
